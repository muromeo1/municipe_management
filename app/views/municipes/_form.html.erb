<%= form_with(model: @municipe) do |form| %>
  <% if @municipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@municipe.errors.count, 'erro') %> impediram a submissão deste formulário:</h2>

      <ul>
        <% @municipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome_completo %>
    <%= form.text_field :full_name %>
  </div>

  <div class="field">
    <%= form.label :cpf %>
    <%= form.text_field :cpf %>
  </div>

  <div class="field">
    <%= form.label :cns %>
    <%= form.text_field :cns %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :data_de_nascimento %>
    <%= form.date_field :birthdate %>
  </div>

  <div class="field">
    <%= form.label :celular %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :foto %>
    <%= form.file_field :photo %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :active, { ativo: true, inativo: false } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
